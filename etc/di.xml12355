<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Payment Method Facade configuration -->
    <virtualType name="WizitFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">\Wizit\Wizit\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Wizit\Wizit\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">WizitValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">WizitCommandPool</argument>
        </arguments>
    </virtualType>

    <!-- Configuration reader -->
    <virtualType name="WizitConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\Wizit\Wizit\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </virtualType>

    <!-- Logger, initialized with WizitConfig -->
    <virtualType name="WizitLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">WizitConfig</argument>
        </arguments>
    </virtualType>

    <type name="Wizit\Wizit\Gateway\Http\Client\ClientMock">
        <arguments>
            <argument name="logger" xsi:type="object">WizitLogger</argument>
        </arguments>
    </type>

    <!-- Commands infrastructure -->
    <virtualType name="WizitCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">WizitAuthorizeCommand</item>
                <item name="capture" xsi:type="string">WizitCaptureCommand</item>
                <item name="void" xsi:type="string">WizitVoidCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Authorize command -->
    <virtualType name="WizitAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">WizitAuthorizationRequest</argument>
            <argument name="handler" xsi:type="object">WizitResponseHandlerComposite</argument>
            <argument name="transferFactory" xsi:type="object">Wizit\Wizit\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Wizit\Wizit\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Authorization Request -->
    <virtualType name="WizitAuthorizationRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">Wizit\Wizit\Gateway\Request\AuthorizationRequest</item>
                <item name="mockData" xsi:type="string">Wizit\Wizit\Gateway\Request\MockDataRequest</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Wizit\Wizit\Gateway\Request\AuthorizationRequest">
        <arguments>
            <argument name="config" xsi:type="object">WizitConfig</argument>
        </arguments>
    </type>

    <!-- Capture command -->
    <virtualType name="WizitCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Wizit\Wizit\Gateway\Request\CaptureRequest</argument>
            <argument name="handler" xsi:type="object">Wizit\Wizit\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Wizit\Wizit\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Wizit\Wizit\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Wizit\Wizit\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Capture Request -->
    <type name="Wizit\Wizit\Gateway\Request\CaptureRequest">
        <arguments>
            <argument name="config" xsi:type="object">WizitConfig</argument>
        </arguments>
    </type>

    <!-- Void command -->
    <virtualType name="WizitVoidCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Wizit\Wizit\Gateway\Request\VoidRequest</argument>
            <argument name="handler" xsi:type="object">Wizit\Wizit\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Wizit\Wizit\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Wizit\Wizit\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Wizit\Wizit\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Void Request -->
    <type name="Wizit\Wizit\Gateway\Request\VoidRequest">
        <arguments>
            <argument name="config" xsi:type="object">WizitConfig</argument>
        </arguments>
    </type>

    <!-- Response handlers -->
    <virtualType name="WizitResponseHandlerComposite" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="txnid" xsi:type="string">Wizit\Wizit\Gateway\Response\TxnIdHandler</item>
                <item name="fraud" xsi:type="string">Wizit\Wizit\Gateway\Response\FraudHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Value handlers infrastructure -->
    <virtualType name="WizitValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">WizitConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="WizitConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">WizitConfig</argument>
        </arguments>
    </virtualType>

    <type name="Wizit\Wizit\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">WizitConfig</argument>
        </arguments>
    </type>

</config>
